  <script>
    function hablar() {
      const mensaje = new SpeechSynthesisUtterance("Has ingresado al núcleo del desarrollo. Aquí nace la fórmula de la inteligencia.");
      mensaje.lang = "es-ES";
      mensaje.pitch = 1.4;
      mensaje.rate = 0.95;
      mensaje.voice = speechSynthesis.getVoices().find(voice => voice.name.includes("Google") && voice.name.includes("femenina")) || speechSynthesis.getVoices()[0];
      speechSynthesis.speak(mensaje);
    }
  </script>
